provider "aws" {
  region = "eu-central-1"
}

provider "aws" {
  alias  = "useast"
  region = "us-east-1"
}

resource "aws_vpc" "vpc1" {
  cidr_block = "10.0.0.0/16"
}

resource "aws_vpc" "vpc2" {
  cidr_block = "10.1.0.0/16"
}

resource "aws_security_group" "lb_sg_vpc1" {
  name_prefix = "lb_sg_vpc1"
  vpc_id      = aws_vpc.vpc1.id
}

resource "aws_security_group" "lb_sg_vpc2" {
  name_prefix = "lb_sg_vpc2"
  vpc_id      = aws_vpc.vpc2.id
}

data "aws_subnet_ids" "public_subnets_vpc1" {
  vpc_id = aws_vpc.vpc1.id
}

data "aws_subnet_ids" "public_subnets_vpc2" {
  vpc_id = aws_vpc.vpc2.id
}

resource "aws_lb" "lb_vpc1" {
  name               = "lb_vpc1"
  load_balancer_type = "application"
  security_groups    = [aws_security_group.lb_sg_vpc1.id]
  subnets            = data.aws_subnet_ids.public_subnets_vpc1.ids
}

resource "aws_lb" "lb_vpc2" {
  name               = "lb_vpc2"
  load_balancer_type = "application"
  security_groups    = [aws_security_group.lb_sg_vpc2.id]
  subnets            = data.aws_subnet_ids.public_subnets_vpc2.ids
}

resource "aws_instance" "web_instance_vpc1_public" {
  provider              = aws.useast
  count                 = length(data.aws_subnet_ids.public_subnets_vpc1.ids)
  ami                   = "ami-0e00e602389e469a3"
  instance_type         = "t2.micro"
  subnet_id             = element(data.aws_subnet_ids.public_subnets_vpc1.ids, count.index)
  vpc_security_group_ids  = [aws_security_group.lb_sg_vpc1.id]
  tags = {
    Name  = "WebInstanceVPC1"
    Owner = "Bizon Nik"
  }
}

resource "aws_instance" "web_instance_vpc2_public" {
  provider              = aws.useast
  count                 = length(data.aws_subnet_ids.public_subnets_vpc2.ids)
  ami                   = "ami-0f34c5ea932e6f0e4"
  instance_type         = "t2.micro"
  subnet_id             = element(data.aws_subnet_ids.public_subnets_vpc2.ids, count.index)
  vpc_security_group_ids  = [aws_security_group.lb_sg_vpc2.id]
  tags = {
    Name  = "WebInstanceVPC2"
    Owner = "Bizon Nik"
  }
}
