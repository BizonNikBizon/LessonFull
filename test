provider "aws" {
  region = "eu-central-1"
}

data "aws_vpc" "vpc1" {
  default = true
}

data "aws_vpc" "vpc2" {
  default = true
}

data "aws_subnet_ids" "public_subnets_vpc1" {
  vpc_id = data.aws_vpc.vpc1.id
}

data "aws_subnet_ids" "public_subnets_vpc2" {
  vpc_id = data.aws_vpc.vpc2.id
}

resource "aws_security_group" "lb_sg_vpc1" {
  name_prefix = "lb_sg_vpc1"
  vpc_id      = data.aws_vpc.vpc1.id
}

resource "aws_security_group" "lb_sg_vpc2" {
  name_prefix = "lb_sg_vpc2"
  vpc_id      = data.aws_vpc.vpc2.id
}

resource "aws_lb" "lb_vpc1" {
  name               = "lb_vpc1"
  internal           = false
  load_balancer_type = "application"
  security_groups    = [aws_security_group.lb_sg_vpc1.id]

  subnet_mapping {
    subnet_id = data.aws_subnet_ids.public_subnets_vpc1.ids[0]
  }

  subnet_mapping {
    subnet_id = data.aws_subnet_ids.public_subnets_vpc1.ids[1]
  }
}

resource "aws_lb" "lb_vpc2" {
  name               = "lb_vpc2"
  internal           = false
  load_balancer_type = "application"
  security_groups    = [aws_security_group.lb_sg_vpc2.id]

  subnet_mapping {
    subnet_id = data.aws_subnet_ids.public_subnets_vpc2.ids[0]
  }

  subnet_mapping {
    subnet_id = data.aws_subnet_ids.public_subnets_vpc2.ids[1]
  }
}

resource "aws_instance" "web_instance_vpc1_public" {
  ami                     = "ami-0e00e602389e469a3"  # Используйте правильный AMI ID для региона eu-central-1
  instance_type           = "t2.micro"
  subnet_id               = data.aws_subnet_ids.public_subnets_vpc1.ids[0]
  vpc_security_group_ids  = [aws_security_group.lb_sg_vpc1.id]

  tags = {
    Name  = "WebInstanceVPC1"
    Owner = "Bizon Nik"
  }
}

resource "aws_instance" "web_instance_vpc2_public" {
  ami                     = "ami-0f34c5ae932e6f0e4"  # Используйте правильный AMI ID для региона us-east-1
  instance_type           = "t2.micro"
  subnet_id               = data.aws_subnet_ids.public_subnets_vpc2.ids[0]
  vpc_security_group_ids  = [aws_security_group.lb_sg_vpc2.id]

  tags = {
    Name  = "WebInstanceVPC2"
    Owner = "Bizon Nik"
  }
}
